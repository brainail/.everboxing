<resources>

    <!-- Toolbar -->
    <style name="AppToolbarDark" parent="Widget.AppCompat.Toolbar"/>
    <style name="AppToolbarDark.Primary">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="theme">@style/AppToolbarDarkTheme</item>
        <item name="android:background">?toolbarBackground</item>
    </style>

    <style name="AppToolbarDarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?toolbarControlColor</item>
    </style>

    <!-- ActionBar -->
    <style name="AppActionBarDark" parent="Widget.AppCompat.ActionBar"/>
    <style name="AppActionBarDark.Primary"/>

</resources>
