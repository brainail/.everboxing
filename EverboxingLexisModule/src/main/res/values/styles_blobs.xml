<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="BlobItem">
        <item name="android:background">?attr/listDefaultSelector</item>
    </style>

    <style name="BlobItem.Title">
        <item name="android:alpha">@dimen/section_title_alpha</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/section_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/section_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/section_horizontal_margin</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

</resources>
