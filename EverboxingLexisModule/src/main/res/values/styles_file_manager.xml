<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="FileManagerItem">
        <item name="android:background">?attr/listDefaultSelector</item>
    </style>

    <style name="FileManagerItem.SectionBase">
        <item name="android:layout_height">@dimen/menu_drawer_section_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FileManagerItem.Section" parent="FileManagerItem.SectionBase">
    </style>

    <style name="FileManagerItem.Icon">
        <item name="android:alpha">@dimen/menu_drawer_section_icon_alpha</item>
        <item name="android:layout_height">@dimen/menu_drawer_section_icon_size</item>
        <item name="android:layout_width">@dimen/menu_drawer_section_icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/section_horizontal_margin</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/section_horizontal_margin</item>
    </style>

    <style name="FileManagerItem.Title">
        <item name="android:alpha">@dimen/section_title_alpha</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/section_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/section_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/section_horizontal_margin</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="FileManagerItem.Title.AfterIcon">
        <item name="android:layout_marginLeft">@dimen/menu_drawer_section_title_after_icon_margin</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/menu_drawer_section_title_after_icon_margin</item>
    </style>

</resources>
