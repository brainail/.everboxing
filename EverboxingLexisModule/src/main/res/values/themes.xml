<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Android section -->
        <!-- ... -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary_default</item>
        <item name="colorPrimaryDark">@color/primary_default_dark</item>
        <item name="colorAccent">@color/accent_default</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:windowBackground">@color/content_bg_default</item>
        <item name="actionBarStyle">@style/AppActionBar.Primary</item>
        <!-- We use toolbarDefaultStyle instead of ... -->
        <!-- <item name="toolbarStyle">@style/AppToolbar.Primary</item> -->

        <!-- Custom section -->
        <!-- ... -->
        <item name="drawerCover">@drawable/drawer_user_cover_default_pink_theme</item>
        <item name="listDefaultSelector">@drawable/list_item_default_selector</item>
        <item name="menuDrawerSectionTextColor">@color/menu_drawer_section_text_color</item>
        <item name="toolbarDefaultStyle">@style/AppToolbar.Primary</item>

        <!-- FAB -->
        <item name="fabDefaultColorNormal">@color/md_indigo_700</item>
        <item name="fabDefaultColorPressed">@color/md_indigo_600</item>
        <item name="fabDefaultColorRipple">@color/md_indigo_300</item>
    </style>

