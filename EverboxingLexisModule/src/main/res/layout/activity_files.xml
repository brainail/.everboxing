<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UselessParent"
    style="@style/AppContent">

    <!-- The main content view -->
    <LinearLayout
        android:orientation="vertical"
        style="@style/AppContentNested">

        <!-- Toolbar -->
        <org.brainail.EverboxingLexis.ui.views.MarqueeSubtitleToolbar
            android:id="@+id/toolbar_primary"
            android:layout_width="match_parent"
            style="?attr/toolbarDefaultStyle"
            android:layout_height="?attr/actionBarSize"/>

        <!-- Box for content -->
        <include layout="@layout/view_content_container"/>
    </LinearLayout>
</FrameLayout>