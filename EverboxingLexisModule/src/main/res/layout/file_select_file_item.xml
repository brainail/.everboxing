<LinearLayout
    android:id="@+id/file_select_directory_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dip"
    android:minHeight="48dp"
    android:paddingLeft="@dimen/menu_drawer_section_horizontal_margin"
    android:paddingRight="8dip"
    android:paddingTop="6dip"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/file_select_file_name"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="22dip"
        android:layout_weight="1"
        tools:text="enwiki-20141212.ext_img.lzma2.slob"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_select_file_size"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="3.25 Gb"/>

        <TextView
            android:id="@+id/file_select_file_timestamp"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            tools:text="1 day ago"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>
</LinearLayout>
