<LinearLayout
    android:id="@+id/file_select_directory_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_drawer_section_height"
    android:orientation="vertical"
    android:paddingBottom="8dip"
    android:paddingLeft="@dimen/menu_drawer_section_horizontal_margin"
    android:paddingRight="8dip"
    android:paddingTop="6dip">

    <TextView
        android:id="@+id/file_select_file_name"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dip"
        android:layout_weight="1"
        android:text="enwiki-20141212.ext_img.lzma2.slob"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_select_file_size"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="3.25 Gb"/>

        <TextView
            android:id="@+id/file_select_file_timestamp"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="6dp"
            android:text="1 day ago"
            android:textStyle="italic"/>
    </LinearLayout>

</LinearLayout>
