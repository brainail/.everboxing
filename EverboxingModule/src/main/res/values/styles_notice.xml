<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notices -->
    <style name="Notice"/>

    <style name="Notice.Bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/notice_bar_min_height</item>
        <item name="android:orientation">horizontal</item>
        <!-- <item name="android:background">@color/alt_main</item> -->
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Notice.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Notice.Message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/notice_horizontal_side_spacing</item>
        <item name="android:layout_marginTop">@dimen/notice_vertical_side_spacing</item>
        <item name="android:layout_marginBottom">@dimen/notice_vertical_side_spacing</item>
        <item name="android:textSize">@dimen/notice_message_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/notice_default_text_color</item>
    </style>

    <style name="Notice.Action">
        <item name="android:layout_width">@dimen/notice_action_width</item>
        <item name="android:layout_height">@dimen/notice_action_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/notice_horizontal_side_spacing</item>
        <item name="android:textColor">@color/notice_action_color</item>
        <item name="android:editable">false</item>
        <item name="android:textSize">@dimen/notice_action_text_size</item>
        <!-- <item name="android:background"></item> -->
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>

</resources>