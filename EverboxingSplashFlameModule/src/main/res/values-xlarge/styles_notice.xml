<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notices -->
    <style name="Notice"/>

    <style name="Notice.Bar" parent="Notice.BarBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxHeight">@dimen/notice_bar_min_height</item>
        <item name="android:height">@dimen/notice_bar_min_height</item>
        <item name="android:minWidth">@dimen/notice_bar_min_width</item>
        <item name="android:maxWidth">@dimen/notice_bar_max_width</item>
        <item name="android:layout_marginLeft">@dimen/notice_horizontal_side_spacing</item>
        <item name="android:layout_marginRight">@dimen/notice_horizontal_side_spacing</item>
        <item name="android:layout_marginTop">@dimen/notice_vertical_side_spacing</item>
        <item name="android:layout_marginBottom">@dimen/notice_vertical_side_spacing</item>
        <item name="android:layout_gravity">bottom|left</item>
    </style>

    <style name="Notice.Message" parent="Notice.MessageBase">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>