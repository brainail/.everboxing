<resources>

    <!-- Toolbar -->
    <style name="AppToolbarBleach" parent="Widget.AppCompat.Toolbar"/>
    <style name="AppToolbarBleach.Primary">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/AppToolbarBleachTheme</item>
        <item name="android:background">?toolbarBackground</item>
    </style>

    <style name="AppToolbarBleachTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?toolbarControlColor</item>
    </style>

    <!-- ActionBar -->
    <style name="AppActionBarBleach" parent="Widget.AppCompat.ActionBar"/>
    <style name="AppActionBarBleach.Primary"/>

</resources>
