<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Android section -->
        <!-- ... -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#556369</item>
        <item name="colorPrimaryDark">#3b464b</item>
        <item name="colorAccent">#43b0e0</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogDarkStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogDarkTheme</item>
        <item name="android:windowBackground">@color/content_bg_dark_default</item>
        <item name="actionBarStyle">@style/AppActionBarDark.Primary</item>
        <!-- We use toolbarDefaultStyle instead of ... -->
        <!-- <item name="toolbarStyle">@style/AppToolbarDark.Primary</item> -->

        <!-- Custom section -->
        <!-- ... -->
        <item name="drawerCover">@drawable/drawer_user_cover_dark_theme</item>
        <item name="listDefaultSelector">@drawable/list_item_default_dark_selector</item>
        <item name="toolbarDefaultStyle">@style/AppToolbarDark.Primary</item>
        <item name="toolbarControlColor">@color/md_white_1000</item>
        <item name="toolbarBackground">?colorPrimary</item>
        <item name="tabDefaultStyle">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="contentDefaultBackgroundColor">@color/content_bg_dark_default</item>
        <item name="cardDefaultBackgroundColor">@color/card_bg_dark_default</item>
        <item name="snackDefaultBackgroundColor">@color/notice_dark_background</item>
        <item name="snackDefaultBackgroundDrawable">@drawable/notice_bar_background_dark</item>
        <item name="menuDrawerBackgroundColor">@color/menu_drawer_background_dark_default</item>
        <item name="dividerDefaultColor">@color/divider_dark_color</item>
        <item name="dropshadowDefaultColor">@color/separator_dropshadow_dark_default</item>
        <item name="dropshadowDefaultDrawable">@drawable/toolbar_dropshadow_dark</item>
        <item name="menuDrawerHelpSectionsDropshadowColor">@color/menu_drawer_help_sections_dark_dropshadow</item>
        <item name="menuDrawerHelpSectionsDropshadowDrawable">@drawable/drawer_menu_help_sections_dropshadow_dark</item>

        <!-- FAB -->
        <item name="fabDefaultColorNormal">@color/md_blue_grey_700</item>
        <item name="fabDefaultColorPressed">@color/md_blue_grey_600</item>
        <item name="fabDefaultColorRipple">@color/md_blue_grey_300</item>
    </style>

    <!-- Default Dark. Colorized. Dark -->
    <style name="AppThemeDark.Default">
        <!-- FAB -->
        <item name="fabDefaultColorNormal">@color/md_blue_grey_700</item>
        <item name="fabDefaultColorPressed">@color/md_blue_grey_600</item>
        <item name="fabDefaultColorRipple">@color/md_blue_grey_300</item>
    </style>

</resources>