<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:sharedUserId="org.brainail.Everboxing"
    android:process="org.brainail.EverboxingSplashFlame"
    package="org.brainail.EverboxingSplashFlame">

    <!-- Open network sockets -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Access information about networks -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Access information about account -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- To find files, etc ... -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="org.brainail.EverboxingSplashFlame.JApplication"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Default">

        <!-- INTRO -->
        <activity
            android:name="org.brainail.EverboxingSplashFlame.ui.activities.AppIntro"
            android:label="@string/app_name"/>

        <!-- HOME -->
        <activity
            android:name="org.brainail.EverboxingSplashFlame.ui.activities.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- FLAME -->
        <activity
            android:name="org.brainail.EverboxingSplashFlame.ui.activities.FlamePreviewActivity"
            android:label="@string/flame_activity_title"/>

        <!-- SETTINGS -->
        <activity
            android:name="org.brainail.EverboxingSplashFlame.ui.activities.SettingsActivity"
            android:label="@string/settings_activity_title"
            android:parentActivityName="org.brainail.EverboxingSplashFlame.ui.activities.HomeActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.brainail.EverboxingSplashFlame.ui.activities.HomeActivity"/>
        </activity>

        <!-- ABOUT -->
        <activity
            android:theme="@style/AboutLibrariesTheme"
            android:name="org.brainail.EverboxingSplashFlame.ui.activities.AboutActivity"
            android:label="@string/app_name_about">
        </activity>

        <!-- Hardy dialogs -->
        <activity
            android:name="org.brainail.EverboxingSplashFlame.ui.views.dialogs.hardy.RemoteHardyDialogsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleTask"
            android:noHistory="false">
            <intent-filter>
                <action android:name="org.brainail.EverboxingHardyDialogs.action.view.remote.dialog"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <!-- Fabric key -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabricApiKey}"/>

        <!-- Multiwindow -->
        <uses-library android:name="com.sec.android.app.multiwindow" android:required="false"/>
        <meta-data android:name="com.sec.android.support.multiwindow" android:value="true" />
        <meta-data android:name="com.sec.android.multiwindow.DEFAULT_SIZE_W" android:resource="@dimen/app_defaultsize_w" />
        <meta-data android:name="com.sec.android.multiwindow.DEFAULT_SIZE_H" android:resource="@dimen/app_defaultsize_h" />
        <meta-data android:name="com.sec.android.multiwindow.MINIMUM_SIZE_W" android:resource="@dimen/app_minimumsize_w" />
        <meta-data android:name="com.sec.android.multiwindow.MINIMUM_SIZE_H" android:resource="@dimen/app_minimumsize_h" />
    </application>

</manifest>
